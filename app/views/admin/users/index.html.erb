<h1>会員一覧</h1>

<table class="table">
  <thead>
      <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
      </tr>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
    <tr>
    <td>
      <%= link_to admin_user_path(user.id) do %>
      <%= image_tag user.get_profile_image, width: "100×100" %>
      <% end %>
      </td>
    <td><%= user.name %></td>
    <td>
      <% if user.is_deleted == false %>
        <p class="text-success">有効</p>
      <% else %>
        <p class="text-secondary">退会</p>
      <% end %>
    </td>
    <td><%= link_to "Show", admin_user_path(user.id) %></td>
    <% end %>
    </tr>
  </tbody>
</table>
<%= paginate @users %>
