<div class="container">
  <h1>会員一覧</h1>
  <table class="table">
    <thead>
        <tr>
        <th>画像</th>
        <th>名前</th>
        <th>会員状況</th>
        <th colspan="3"></th>
        </tr>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |user| %>
      <tr>
      <td>
        <%= link_to admin_user_path(user.id) do %>
        <%= image_tag user.get_profile_image, width: "100×100" %>
        <% end %>
        </td>
      <td><%= user.name %></td>
      <td>
        <% if user.is_deleted == false %>
          <p class="text-success">有効</p>
        <% else %>
          <p class="text-secondary">退会</p>
        <% end %>
      </td>
      <td><%= link_to "詳細", admin_user_path(user.id) %></td>
      <% end %>
      </tr>
    </tbody>
  </table>
  <%= paginate @users %>
</div>