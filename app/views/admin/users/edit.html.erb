<h1>Admin::Users#edit</h1>
<div class='row'>
<%= form_with model: @user, url: admin_user_path(@user), method: :patch do |f| %>
  <table class="table table-borderless">
    <tr>
      <th>プロフィール画像</th>
      <td><%= f.file_field :profile_image, accept: "image/*" %></td>
    </tr>
    <tr>
      <th>名前</th>
      <td><%= f.text_field :name %></td>
    </tr>
    <tr>
      <th>運動頻度</th>
      <td><%= f.text_field :work_out %></td>
    </tr>
    <tr>
      <th>自己紹介</th>
      <td><%= f.text_field :introduction %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>
        <%= form_with model: @user, url:admin_user_path, method: :patch do |f| %>
            <%= f.radio_button :is_deleted, false %>
            <%= f.label :is_deleted, '有効', class: "mr-2" %>
            <%= f.radio_button :is_deleted, true %>
            <%= f.label :is_deleted, '退会' %>
        <% end %>
      </td>
    </tr>
    <tr>
      <td></td>
      <td>
        <%= f.submit "編集内容を保存", class: "btn btn-success" %>
      </td>
      <td></td>
    </tr>
  </table>
  <% end %>
</div>