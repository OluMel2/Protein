<div class="container">
  <div class="row mt-4">
    <div class="col-lg-12">
      <div class="text-center pb-5">
        <div class = "pt-5">
          <h2 class="mb-4">新規登録</h2>
          <%= form_with model: @user, url: user_registration_path do |f| %>
  　　　　　　<div class="field">
    　　　　　　<div class="col-12 col-form-label">名前</div>
            <%= f.text_field :name %>
          </div>
          <div class="field">
            <div class="col-12 pt-4 col-form-label">メールアドレス</div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
            <div class="col-12 pt-4 col-form-label">パスワード(6文字以上)</div>
            <% if @minimum_password_length %>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="field">
          　<div class="col-12 col-form-label">パスワード(確認)</div>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div>
          <div class="actions pt-5">
            <%= f.submit "新規登録" %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
