<div class="container">
  <div class="row mt-4">
    <div class="col-lg-12">
      <div class="text-center pb-5">
        <%= render "public/posts/flash_message" %>
        <div class = "pt-5">
          <h2 class="mb-4">ログイン</h2>
          <%= form_with model: @user, url: user_session_path do |f| %>
          <div class="field">
            <div class="col-12 col-form-label">メールアドレス<span class="text-danger">*</span></div>
            <%= f.email_field :email, size: "40"  %>
          </div>
          <div class="field">
            <div class="col-12 col-form-label">パスワード<span class="text-danger">*</span></div>
            <%= f.password_field :password, autocomplete: "current-password", size: "40"  %>
          </div>
          <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div>
          <% end %>
          <div class="actions">
            <%= f.submit "ログイン", class: 'btn btn-sm btn-primary' %>
          </div>
          <div class="p-4">
            アカウントをお持ちでない場合は<%= link_to "こちら", new_user_registration_path %></u>  から
          </div>
        　<% end %>
        </div>
      </div>
    </div>
  </div>
</div>
