<h2>プロフィール編集</h2>
<%= render "public/posts/flash_message" %>

<%= form_with model:@user do |f| %>
<div>
  <%= f.label '名前' %>
  <%= f.text_field :name, placeholder:"名前" %>
</div>
<div>
  <%= f.label '運動頻度' %>
  <%= f.select :work_out, ['ほぼ毎日', '週に3〜4', '週に2回', '週に1回', '月に1〜2', 'ほとんどしない'], class: 'work_out' %>
</div>
<div>
  <%= f.label '自己紹介' %>
  <%= f.text_field :introduction, placeholder:"自己紹介" %>
</div>
<div>
  <%= f.label 'プロフィール画像' %>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
</div>
<div>
  <%= f.submit "変更を保存" %>
  <%= link_to "退会する", users_quit_path, class: "btn btn-md btn-danger" %>
  <% end %>
</div>