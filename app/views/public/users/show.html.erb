<%= render "public/posts/flash_message" %>
<!-- ユーザーの詳細 -->
<div class="container">
  <h3><%= @user.name %></h3>
  <div class="rounded float-left mr-5 mb-5">
    <%= image_tag @user.get_profile_image, width: "100×100" %>
  </div>
  <div class="form-group form-inline input-group-sm pt-5 pl-5">
    <label class="col-md-3 control-label"><strong>運動頻度</strong></label>
    <%= @user.work_out %>
  </div>
  <div class="form-group form-inline input-group-sm pt-2 pl-5">
    <label class="col-md-3 control-label text-left"><strong>自己紹介</strong></label>
    <p class="pl-5"><%= @user.introduction %></p>
  </div>
  <div class="text-right">
    <% if @user == current_user %>
    <% if @user.name != "guestuser" %>
    <p><%= link_to "プロフィール編集", user_information_path(@user.id), class: "btn btn-outline-secondary btn-sm edit_user_#{@user.id}" %></p>
    <% end %>
    <% end %>
  </div>


<!-- ユーザーの投稿一覧 -->
  <div class="d-flex flex-wrap">
    <% @posts.each do |posts| %>
    <div class="card col-3 h-100 text-center">
      <%= link_to post_path(posts.id) do %>
      <%= image_tag posts.get_image, size: "200x200" %><!--投稿した商品の画像-->
      <% end %>
      <div class="card-body">
        <h5 class="card-title"><%= link_to posts.product_name, post_path(posts.id) %></h5>
        <p class="card-text"><strong>タイプ</strong>：<%= posts.tag.name %></p>
        <p class="car-text"><strong>味</strong>：<%= posts.tast %></p>
        <p class="car-text"><strong>タンパク質量</strong>：<%= posts.protein %>g</p>
        <p class="car-text"><%= posts.user.name %></p>
        <p class="card-text"><%= link_to "#{posts.comments.count} コメント", post_path(posts.id) %></p>
      </div>
    </div>
    <% end %>
  </div>
  <div class="m-2">
    <%= paginate @posts %>
  </div>
</div>



